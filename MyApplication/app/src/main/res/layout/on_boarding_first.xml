<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoardingFirstPage">

    <ImageView
        android:id="@+id/OnBoardingFirstImage"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginTop="28dp"
        android:padding="20dp"
        android:src="@drawable/height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/OnBoardingFirstTitle"
        android:layout_width="337dp"
        android:layout_height="40dp"
        android:layout_marginStart="174dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="178dp"
        android:layout_marginRight="178dp"
        android:gravity="center"
        android:text="Track your Kidsâ€™ Growth"
        android:textSize="18dp"
        android:textColor="@color/colorOrange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/OnBoardingFirstImage"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/OnBoardingFirstDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginLeft="176dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="176dp"
        android:layout_marginRight="176dp"
        android:gravity="center"
        android:includeFontPadding="true"
        android:padding="0dp"
        android:text=" Child care App Helps you to track your Kids Height and weight ."
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OnBoardingFirstTitle" />



    <Button
        android:id="@+id/on_boarding_first_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        app:layout_constraintHorizontal_bias="@integer/next_horizontal_bias"
        app:layout_constraintVertical_bias="@integer/vertical_bias" />

    <Button
        android:id="@+id/on_boarding_first_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        app:layout_constraintHorizontal_bias="@integer/skip_horizontal_bias"
        app:layout_constraintVertical_bias="@integer/vertical_bias" />
</androidx.constraintlayout.widget.ConstraintLayout>