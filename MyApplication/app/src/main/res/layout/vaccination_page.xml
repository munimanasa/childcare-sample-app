            <ListView
                android:id="@+id/vaccination_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/vaccination_bottom_menu"
                android:layout_below="@+id/vaccination_baby"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF">
            </ListView>
            <ScrollView
                android:id="@+id/vaccination_graph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vaccination_baby"
                android:layout_above="@+id/vaccination_bottom_menu">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:id="@+id/height_add_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADD CURRENT HEIGHT"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorOrange"
                        android:clickable="true">
                    </TextView>
                    <LinearLayout
                        android:id="@+id/height_add_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText android:id="@+id/input_height"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:layout_marginLeft="10dp"
                            android:textSize="12dp"
                            android:textColorHint="@color/colorOrange"
                            android:hint="Enter current height" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="16dp"
                            android:text="CM"
                            android:textStyle="bold">
                        </TextView>
                        <Button
                            android:id="@+id/height_save"
                            android:layout_width="60dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="75dp"
                            android:background="#FFFFFF"
                            android:textColor="@color/colorOrange"
                            android:text="Save">
                        </Button>
                        <Button
                            android:id="@+id/height_cancel"
                            android:layout_width="70dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="25dp"
                            android:background="#FFFFFF"
                            android:textColor="@color/colorOrange"
                            android:text="Cancel">
                        </Button>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/weight_add_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADD CURRENT WEIGHT"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorOrange"
                        android:clickable="true">
                    </TextView>
                    <LinearLayout
                        android:id="@+id/weight_add_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText android:id="@+id/input_weight"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:layout_marginLeft="10dp"
                            android:textSize="12dp"
                            android:textColorHint="@color/colorOrange"
                            android:hint="Enter current weight"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KG"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:textSize="16dp">
                        </TextView>
                        <Button
                            android:id="@+id/weight_save"
                            android:layout_width="60dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="75dp"
                            android:background="#FFFFFF"
                            android:textColor="@color/colorOrange"
                            android:text="Save">
                        </Button>
                        <Button
                            android:id="@+id/weight_cancel"
                            android:layout_width="70dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="25dp"
                            android:background="#FFFFFF"
                            android:textColor="@color/colorOrange"
                            android:text="Cancel">
                        </Button>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp">

                            <LinearLayout
                                android:id="@+id/charts_height_button"
                                android:layout_width="172dp"
                                android:layout_height="122dp"
                                android:background="@color/white_greyish"
                                android:orientation="vertical"
                                android:clickable="true">

                                <ImageView
                                    android:id="@+id/charts_height_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="50dp"
                                    android:layout_marginTop="20dp">
                                </ImageView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="50dp"
                                    android:layout_marginTop="5dp"
                                    android:textStyle="bold"
                                    android:text="Height">
                                </TextView>
                                <TextView
